import StateMachine.dzn;
import Log.dzn;

interface IServer
{
	in void request();
	behaviour
	{
		enum State {Follower, Candidate, Leader};
		on request: { }
	}
}

component ConsensusModule
{
	
	provides IServer ctrl;
	requires IStateMachine state;
	requires ILog log;

	behaviour
	{
		on ctrl.request(): {}
	}
}

